{
  "manifest_version": 3,
  "name": "AI Research Assistant",
  "version": "1.1",
  "description": "Auto-saves pages and lets you query them via RAG.",

  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:8000/*"
  ],

  "background": {
  "service_worker": "background.js",
  "type": "module"
},

  "action": {
    "default_popup": "popup.html",
    "default_title": "Research Assistant"
  }
}